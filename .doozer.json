{
    "targets": {
        "3DS": {
            "buildenv": "docker:devkitpro/devkitarm",
            "buildcmd": "make 3ds -j${PARALLEL}",

            "artifacts": [
                "platform/3ds/*.elf",
                "platform/3ds/*.3dsx"
            ]
        },
        
        "Switch": {
            "buildenv": "docker:devkitpro/devkita64",
            "buildcmd": "make switch -j${PARALLEL}",
            
            "artifacts": [
                "platform/switch/*.elf",
                "platform/switch/*.nro"
            ]
        }
    }
}
